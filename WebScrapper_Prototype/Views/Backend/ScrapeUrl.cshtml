		// Load Shopping Cart
		function loadScrap() {
			let startScraper = 1;
			$.ajax({
				type: 'GET',
				url: '/Backend/ScrapeUrl',
				data: { startScraper: startScraper },
				success: function (r) {
					alertify.notify('Scraping...' + r, 'custom', 2, function () { console.log('dismissed'); });
				},
				error: function (e) {
					alertify.error('Error: JavaScript Function (loadScrap)');
