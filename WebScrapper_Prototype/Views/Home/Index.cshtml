@using WebScrapper_Prototype.Controllers;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model X.PagedList.IPagedList<WebScrapper_Prototype.Models.Product>
<link href="~/Content/PagedList.css" type="text/css" rel="stylesheet">
@{
    ViewData["Title"] = "Welcome";
    ViewBag.Title = "Home";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Swift Link</title>
    <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link href="css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="css/mdb.min.css" type="text/css" rel="stylesheet">
    <link href="css/style.min.css" type="text/css" rel="stylesheet">
    <link href="~/css/site.css" type="text/css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<style type="text/css">
    .highlight {
        font-weight: bold;
    }
</style>
<body>
    <partial name="_LoginPartial" />
    <div id="carousel-example-1z" class="carousel slide carousel-fade pt-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-1z" data-slide-to="1"></li>
            <li data-target="#carousel-example-1z" data-slide-to="2"></li>
        </ol>
        <!--Slides-->
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <div class="view" style="background-image: url('img/3.png'); background-repeat: no-repeat; background-size:cover;">
                    <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
                        <div class="text-center white-text mx-5 wow fadeIn">
                            <h1 class="mb-4">
                                <strong>Find your dream PC at the lowest possible price</strong>
                            </h1>
                            <p>
                                Pre-built PC's | Laptop's | Hardware | Accessories
                            </p>
                            <p class="mb-4 d-none d-md-block">
                                Find what you like, add it to your cart and get it shipped right to your door.
                            </p>
                            <a target="_blank" href="" class="btn btn-outline-white btn-lg">
                                Start Browsing
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="view" style="background-image: url('img/1.png'); background-repeat:no-repeat; background-size:cover;">
                    <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
                        <div class="text-center white-text mx-5 wow fadeIn">
                            <h1 class="mb-4">
                                <strong>On SALE 24/7</strong>
                            </h1>
                            <p>
                                Higher quailty at cheaper prices
                            </p>
                            <p class="mb-4 d-none d-md-block">
                                We use A.I and other software to find the best possible product at the lowest possible price instantly
                            </p>
                            <a target="_blank" href="#" class="btn btn-outline-white btn-lg">
                                Start Browsing
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="view" style="background-image: url('img/2.png'); background-repeat: no-repeat; background-size: cover;">
                    <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
                        <div class="text-center white-text mx-5 wow fadeIn">
                            <h1 class="mb-4">
                                <strong>PC Builder</strong>
                            </h1>
                            <p>
                                Create your dream PC
                            </p>
                            <p class="mb-4 d-none d-md-block">
                                Select components or let our site select them for you,
                                place your order and get your components deliveried for you to assemble.
                            </p>
                            <a target="_blank" href="#" class="btn btn-outline-white btn-lg">
                                PC Builder
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <main>
        <div class="container">
            <!--Navbar-->
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
                <nav class="navbar navbar-expand-lg navbar-dark mdb-color lighten-3 mt-3 mb-5">
                    <span class="navbar-brand">Categories:</span>


                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                        aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>


                    <div class="collapse navbar-collapse" id="basicExampleNav">

                        <!-- Links -->
                        <ul class="navbar-nav mr-auto">
                            <li id="mylinks" class="nav-item">
                                <a class="nav-link">
                                    All
                                </a>
                            </li>
                            <li id="mylinks" class="nav-item">
                                @Html.ActionLink("Laptops", "Index",
                            new { findProduct = ViewBag.LaptopParm, currentFilter=ViewBag.CurrentFilter },
                            new {Class="nav-link"})
                            </li>
                            <li id="mylinks" class="nav-item">
                                @Html.ActionLink("Pre-Built Desktops", "Index",
                            new { findProduct = ViewBag.DesktopParm, currentFilter=ViewBag.CurrentFilter },
                            new {Class="nav-link"})
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Hardware", "Index",
                            new { findProduct = ViewBag.HardwareParm, currentFilter=ViewBag.CurrentFilter },
                            new {Class="nav-link"})
                            </li>
                            <li id="mylinks" class="nav-item">
                                @Html.ActionLink("Accessories", "Index",
                            new { findProduct = ViewBag.AccessoriesParm, currentFilter=ViewBag.CurrentFilter },
                            new {Class="nav-link"})
                            </li>
                        </ul>
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                        <input type="submit" value="Find" style="background:transparent; border:none;" />
                    </div>
                </nav>
                <table class="product-table" style="margin-top:-20px;">
                    <tbody>
                        <tr>
                            <td>
                                <strong>
                                    @Html.ActionLink("New", "Index",
                                new { sortOrder = ViewBag.ProductStatusSortParm, findProduct=ViewBag.CurrentProduct },
                                new {Class="btn btn-outline-white btn-sm", Style="background:grey !important;"})
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    @Html.ActionLink("Savings", "Index",
                                new { sortOrder = ViewBag.SavingParm, findProduct=ViewBag.CurrentProduct },
                                new {Class="btn btn-outline-white btn-sm mdb-color lighten-3", Style="background:grey !important;"})
                                </strong>
                            </td>
                            <td style="margin:5px;">
                                <strong>
                                    @Html.ActionLink("Lowest Price", "Index",
                                new { sortOrder = ViewBag.LowestPriceParm, findProduct=ViewBag.CurrentProduct },
                                new {Class="btn btn-outline-white btn-sm mdb-color lighten-3", Style="background:grey !important;"})
                                </strong>
                            </td>
                        </tr>
                    </tbody>
                </table>

                @foreach (var product in Model)
                {
                    <div class="media">
                        @if (product.ImageURL.Contains("www"))
                        {
                            <img class="mr-3" src="@product.ImageURL" alt="productimage" />
                        }
                        else
                        {
                            <img class="mr-3" src="~/Uploads/@product.ImageURL" alt="productimage" />
                        }
                        <div class="media-body">
                            <h5 class="mt-0">@Html.DisplayFor(modelItem => product.ProductName)</h5>
                            <div class="mb-3">
                                <span class="badge purple mr-1">
                                    @Html.DisplayFor(modelItem => product.ProductCategory)
                                </span>
                                <span class="badge red mr-1">
                                    @Html.DisplayFor(modelItem => product.ProductStatus)
                                </span>
                            </div>
                            <div class="media mt-3">
                                <a class="pr-3">
                                    <form class="d-flex justify-content-left">
                                        <!-- Default input -->
                                        <button class="btn btn-primary btn-md my-0 p" type="submit">
                                            <i class="fas fa-shopping-cart ml-1"></i>
                                        </button>
                                    </form>
                                </a>
                                <div class="media-body">
                                    <h5 class="mt-0">Discounted Price:</h5>
                                    <p class="lead">
                                        <span class="mr-1">
                                            <del>
                                                R @Html.DisplayFor(modelItem => product.ProductBasePrice)
                                            </del>
                                        </span>
                                        <span class="mr-1">
                                            <strong>
                                                R @Html.DisplayFor(modelItem => product.ProductSalePrice)
                                            </strong>
                                        </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <nav aria-label="Page navigation">
                    <ul class="pagination flex-center">
                        @Html.PagedListPager( (IPagedList)ViewBag.OnePageOfProducts, 
                        page => Url.Action("Index", new { page }) ,
                        new X.PagedList.Web.Common.PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        })
                    </ul>
                </nav>
            }
        </div>
    </main>
    <footer class="page-footer text-center font-small mt-4 wow fadeIn">
        <p class="mb-4 d-none d-md-block">
            <strong>
                Follow our tutorials on how to build your first PC
            </strong>
            <a target="_blank" href="#" class="btn btn-outline-white btn-lg">
                Tutorials
                <i class="fas fa-graduation-cap ml-2"></i>
            </a>
        </p>
        <hr class="my-4">
        <div class="pb-4">
            <a href="#" target="_blank">
                <i class="fab fa-facebook-f mr-3"></i>
            </a>
            <a href="#" target="_blank">
                <i class="fab fa-twitter mr-3"></i>
            </a>
            <a href="#" target="_blank">
                <i class="fab fa-youtube mr-3"></i>
            </a>
            <a href="#" target="_blank">
                <i class="fab fa-google-plus-g mr-3"></i>
            </a>
            <a href="#" target="_blank">
                <i class="fab fa-pinterest mr-3"></i>
            </a>
        </div>
        <div class="footer-copyright py-3">
            Â© 2023 Copyright:
            <a href="" target="_blank"> SwiftLink.com </a>
        </div>
    </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="js/popper.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/mdb.min.js"></script>
    <script type="text/javascript" src="~/js-site/site.js"></script>
    <script type="text/javascript">new WOW().init();</script>
</body>
</html>