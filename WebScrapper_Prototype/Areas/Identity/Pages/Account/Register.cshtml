@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<body>
    <a href="/">
        <img src="/backbutton.png" height="25" width="25" />
    </a>
    <div class="container" id="container" style="min-height:640px">
        <div class="form-container sign-in-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1>@ViewData["Title"]</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.FirstName" placeholder="First Name" class="form-control" autocomplete="firstname" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    <input asp-for="Input.LastName" placeholder="Last Name" class="form-control" autocomplete="lastname" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    <input asp-for="Input.Cellphone" placeholder="Cellphone" class="form-control" autocomplete="cellphone" aria-required="true" />
                    <span asp-validation-for="Input.Cellphone" class="text-danger"></span>
                    <input asp-for="Input.CountryCode" placeholder="Country Code" class="form-control" autocomplete="countrycode" aria-required="true" />
                    <span asp-validation-for="Input.CountryCode" class="text-danger"></span>
                    <input asp-for="Input.Email" placeholder="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Password" placeholder="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button id="registerSubmit" type="submit">Register</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Already a user?</h1>
                    <p>Go to Sign In webpage...</p>
                    <button class="ghost" id="signIn" onclick="href='/Identity/Account/Login'">Sign In</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    const signUpButton = document.getElementById('signUp');
const signInButton = document.getElementById('signIn');
const container = document.getElementById('container');

signUpButton.addEventListener('click', () => {
	container.classList.add("right-panel-active");
});

signInButton.addEventListener('click', () => {
	container.classList.remove("right-panel-active");
});    
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


</body>

</html>

